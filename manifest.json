{
  "manifest_version": 2,
  "name": "Conference Project",
  "description": "Chunyi Lyu",
  "version": "0.0.3",
  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "js": ["contentscript.js"]
    }
  ],
  "browser_action": {
    "default_title": "",
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "tabs",
    "<all_urls>",
    "notifications",
    "storage",
    "webNavigation",
    "contextMenus",
    "webRequest",
    "activeTab",
    "webRequestBlocking"  ]
}
