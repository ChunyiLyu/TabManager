{
  "manifest_version": 2,
  "name": "Tab Manager",
  "description": "Chunyi Lyu",
  "version": "1.0",
  "options_ui": {
    "page": "options.html"
  },
  "background": {
    "persistent": true,
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_title": "",
    "default_popup": "popup.html",
    "default_icon": "paw.png"
  },
  "permissions": [
    "tabs",
    "<all_urls>",
    "notifications",
    "storage",
    "webNavigation",
    "contextMenus",
    "webRequest",
    "activeTab",
    "alarms",
    "webRequestBlocking"  ]
}
